        {
          "type": "basic",
          "from": {
            "key_code": "x"
          },
          "to": [
            {
              "set_variable": {
                "name": "mode",
                "value": 100
              }
            },
            {
              "key_code": "x",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
